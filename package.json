{
  "name": "pkmn-rom-patcher",
  "version": "1.0.0",
  "description": "A GitHub Pages-hosted ROM patcher that automatically updates its patch list when new files are added.",
  "main": "index.js",
  "scripts": {
    "serve": "http-server . -p 3000 -a localhost",
    "test": "playwright test",
    "test:smoke": "playwright test tests/smoke --reporter=list",
    "test:core": "playwright test tests/core --reporter=list",
    "test:integration": "playwright test tests/integration --reporter=list",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui"
  },
  "keywords": ["rom", "patcher", "github-pages"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "http-server": "^14.1.1",
    "gray-matter": "^4.0.3"
  }
}